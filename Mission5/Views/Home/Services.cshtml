@{
    ViewData["Title"] = "Services";
}
@* card with hour input, rate displayed, and calculate button, showing result in total box *@
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="card-title mb-3">Yoga Tutoring Services</h3>

                <p class="mb-4">
                    Use the calculator to see how much it would cost for private yoga lessons.
                </p>

                <div class="mb-3">
                    <label for="hours" class="form-label">Hours Needed</label>
                    <input type="number" id="hours" min="0" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="rate" class="form-label">Rate Per Hour</label>
                    <input type="text" id="rate" value="50" readonly class="form-control">
                </div>

                <div class="mb-3">
                    <button id="btn-calc" class="btn btn-primary w-100">
                        Calculate Total
                    </button>
                </div>

                <div class="mb-3">
                    <label for="total" class="form-label">Total Cost</label>
                    <input type="text" id="total" readonly class="form-control">
                </div>

                <div class="text-center mt-3">
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/services.js"></script>
}